{% extends "base.html.twig" %}

{% block body %}
    <h1>Product list</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description}}</td>
                <td>{{ product.price }}</td>
                <td><a href="{{ path('product_delete', {'id': product.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}